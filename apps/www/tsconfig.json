{
  "extends": "workspace/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": { "~/*": ["./*"] },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    ".next/types/**/*.ts",
    "**/*.d.ts",
    "**/*.ts",
    "**/*.mts",
    "**/*.cts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "out"]
}
